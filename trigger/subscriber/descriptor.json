{
	"name": "subscriber",
	"type": "flogo:trigger",
	"version": "0.0.1",
	"title": "Apache Pulsar Subscriber",
	"description": "A simple pulsar subscriber which reads messages from apache pulsar queue",
	"settings": [
		{
			"name": "connection",
			"type": "connection",
			"required": true
		},
		{
			"name": "format",
			"type": "string",
			"required": true,
			"allowed":["String","JSON"],
			"value":"String"
		}
	],
	"output": [
		{
			"name": "key",
			"type": "string",
			"required": false
		},
		{
			"name": "properties",
			"type": "params",
			"required": false
		},
		{
			"name": "message",
			"type": "string",
			"required": false
		},
		{
			"name": "messageObj",
			"type": "object",
			"required": false
		}
	],
	"handler": {
		"settings": [
			{
				"name": "topic",
				"type": "string",
				"required": true,
				"value":"/tenant/namespace/topic"
			},
			{
				"name": "subscription",
				"type": "string",
				"required": true,
				"value":""
			},
			{
				"name": "subscriptiontype",
				"type": "string",
				"required": true,
				"allowed":["Exclusive","Shared","Failover","KeyShared"],
				"value":"Shared"
			},
			{
				"name": "initialposition",
				"type": "string",
				"required": true,
				"allowed":["Latest","Earliest"],
				"value":"Latest"
			},
			{
				"name": "dlqtopic",
				"type": "string",
				"required": false,
				"value":""
			},
			{
				"name": "dlqmaxdeliveries",
				"type": "integer",
				"required": false,
				"value":3
			}

		]
	}
}
