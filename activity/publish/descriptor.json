{
	"name": "publish",
	"type": "flogo:activity",
	"version": "0.0.1",
	"title": "Pulsar Publish",
	"description": "A Simple activity to publish messages to an Apache Pulsar broker",
	"settings": [
		{
			"name": "connection",
			"type": "connection",
			"required": true
		},
		{
			"name": "format",
			"type": "string",
			"required": true,
			"allowed":["String","JSON"],
			"value":"String"
		},
		{
			"name": "topic",
			"required": true,
			"type": "string",
			"value": "/tenant/namespace/topic"
		},
		{
			"name": "compressiontype",
			"required": true,
			"type": "string",
			"allowed": ["NONE","LZ4","ZLIB","ZSTD"],
			"value": "NONE"
		}
	],
	"input": [
		{
			"name": "key",
			"type": "string",
			"required": false
		},
		{
			"name": "properties",
			"type": "params",
			"description": "The message properties expressed as name:value pairs",
			"required": false
		},
		{
			"name": "message",
			"type": "string",
			"required": false
		},
		{
			"name": "messageObj",
			"type": "object",
			"required": false
		}
	],
	"output": [
		{
			"name": "msgid",
			"type": "string"
		}
	]
}
