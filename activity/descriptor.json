{
	"name": "publish",
	"type": "flogo:activity",
	"version": "0.0.1",
	"title": "Pulsar Publish",
	"description": "A Simple activity to publish messages to an Apache Pulsar broker",
	"settings": [
		{
			"name": "connection",
			"type": "connection",
			"allowed": null,
			"required": true
		},
		{
			"name": "topic",
			"required": true,
			"type": "string",
			"value": "/tenant/namespace/topic"
		}
	],
	"input": [
		{
			"name": "payload",
			"type": "string",
			"allowed": null,
			"required": false
		}
	]
}
