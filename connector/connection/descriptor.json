{
	"name": "pulsar-connection",
	"title": "Apache Pulsar Client Configuration",
	"author": "TIBCO Software Inc.",
	"type": "flogo:connector",
	"version": "1.0.0",
	"settings": [
		{
			"name": "name",
			"type": "string",
			"required": true
		},
		{
			"name": "description",
			"type": "string"
		},
		{
			"name": "url",
			"type": "string",
			"required": true,
			"value": "pulsar[+ssl]://localhost:6650"
		},
		{
			"name": "cacert",
			"type": "string",
			"required": false,
			"value": ""
		},
		{
			"name": "allowinsecure",
			"type": "boolean",
			"required": true,
			"value": false
		},
		{
			"name": "auth",
			"type": "string",
			"required": true,
			"value": "None",
			"allowed": ["None","TLS","JWT"]
		},
		{
			"name": "certFile",
			"type": "string",
			"required": false,
			"value": ""
		},
		{
			"name": "keyFile",
			"type": "string",
			"required": false,
			"value": ""
		},
		{
			"name": "jwt",
			"type": "string",
			"required": false,
			"value": ""
		}
	]
}